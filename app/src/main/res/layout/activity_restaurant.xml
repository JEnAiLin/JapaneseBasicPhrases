<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kaplan.pdma.japanesebasicphrases.restaurant"
    android:background="#4abdac">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Welcome"
            android:id="@+id/welcome"
            android:height="100dp"
            android:width="160dp"
            android:onClick="buttonTapped"
            android:background="#f7b733"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="How many people?"
            android:id="@+id/howmanypeople"
            android:height="100dp"
            android:width="160dp"
            android:onClick="buttonTapped"
            android:layout_gravity="fill_vertical"
            android:background="#f7b733"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="This way."
            android:id="@+id/thisway"
            android:height="100dp"
            android:width="160dp"
            android:onClick="buttonTapped"
            android:background="#f7b733"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Excuse me."
            android:id="@+id/excuseme"
            android:height="100dp"
            android:width="160dp"
            android:onClick="buttonTapped"
            android:background="#f7b733"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Drink."
            android:id="@+id/drink"
            android:height="100dp"
            android:width="160dp"
            android:onClick="buttonTapped"
            android:background="#f7b733"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Beer."
            android:id="@+id/beer"
            android:height="100dp"
            android:width="160dp"
            android:onClick="buttonTapped"
            android:background="#f7b733"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Certainly."
            android:id="@+id/certainly"
            android:height="100dp"
            android:width="160dp"
            android:onClick="buttonTapped"
            android:background="#f7b733"
            android:layout_margin="5dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="No thank you."
            android:id="@+id/nothankyou"
            android:height="100dp"
            android:width="160dp"
            android:onClick="buttonTapped"
            android:background="#f7b733"
            android:layout_margin="5dp" />


    </GridLayout>
</RelativeLayout>
